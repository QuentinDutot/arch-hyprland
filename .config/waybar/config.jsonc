  "backlight": {
    "format": " {percent}%",
    "scroll-step": 5,
    "tooltip-format": "{percent}%"
  },

  "bluetooth": {},

  "network": {
    "format": " {essid}",
    "tooltip": false
  },

  "clock": {
    "format": "{:%H:%M}",
    "tooltip-format": "{:%A, %B %d, %Y}"
  },

  "custom/update": {
    "format": "",
    "interval": 300,
    "exec": "~/.config/waybar/updater check",
    "on-click": "~/.config/waybar/updater update",
    "tooltip": false
  },

  "custom/shutdown": {
    "format": "",
    "on-click": "sh -c 'shutdown -h now' & disown",
    "tooltip": false
  }
}
